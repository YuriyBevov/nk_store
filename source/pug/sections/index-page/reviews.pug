-
  const reviews = [1,2,3,4,5,6,7,8,9]

section.reviews
  .reviews__wrapper
    h2.section-colored-title Отзывы наших покупателей

    .swiper.reviews-swiper
      .swiper-wrapper
        each review in reviews
          .swiper-slide
            include ../../components/review-card

      .swiper-button-next.reviews-button-next
        svg(width="20" height="20")
          use(xlink:href="#icon-slider-arr")
      .swiper-button-prev.reviews-button-prev
        svg(width="20" height="20")
          use(xlink:href="#icon-slider-arr")