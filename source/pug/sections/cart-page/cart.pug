include ../../mixins/main_btn

section.cart
  .cart__wrapper
    .cart__content
      ul.cart__list
        li.cart__item
          h2 Толстовка черная с крупным глянцевым принтом

          .cart__item-container
            img(src="./assets/img/cart_img.png" alt="Название товара" width="180" height="240")

            .cart__item-content
              ul.cart__item-chars
                li
                  span Бренд:
                  a(href="#")  Noble People
                li
                  span Размер:
                  span 92
                li
                  span Цвет:
                  span Фиолетовый
              
              .cart__item-count
                include ../../components/counter

                .cart__item-price
                  span.cart__item-price-old 999 999 руб.
                  span.cart__item-price-current 999 999 руб.

          button(type="button").cart__item-remove-btn
            svg(width="24" height="24")
                use(xlink:href="#icon-close")

        li.cart__item
          h2 Толстовка черная с крупным глянцевым принтом

          .cart__item-container
            img(src="./assets/img/cart_img.png" alt="Название товара" width="180" height="240")

            .cart__item-content
              ul.cart__item-chars
                li
                  span Бренд:
                  a(href="#")  Noble People
                li
                  span Размер:
                  span 92
                li
                  span Цвет:
                  span Красный
              
              .cart__item-count
                include ../../components/counter

                .cart__item-price
                  span.cart__item-price-old 999 999 руб.
                  span.cart__item-price-current 999 999 руб.

          button(type="button").cart__item-remove-btn
            svg(width="24" height="24")
                use(xlink:href="#icon-close")
        
        
      
      a(href="#").cart__clear-btn Очистить корзину

    .cart__aside
      .cart__aside-section
        span Товары:
        span 999 999 руб.
      .cart__aside-section
        span Скидка:
        span 999 999 руб.
      .cart__aside-section
        span Итого:
        span 1 999 999 руб.
      
      .cart__aside-form-container
        form(action="#") 
          input(type="text" placeholder="Промокод")
          button(type="submit") Применить
        
        +main_btn('link', 'Перейти к оформлению', '#', 'cart__offer-btn')